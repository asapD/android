            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/signup_phone"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#D3D3D3"
                    android:digits="0123456789-"
                    android:hint="@string/signup_phone_format"
                    android:inputType="phone"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="-1dp"
                    android:text="@string/signup_send_phoneNum"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:backgroundTint="#D3D3D3" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/signup_authCode"
                android:textSize="15sp"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_authCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="100dp"
                    android:background="#D3D3D3"
                    android:hint="@string/signup_authCode"
                    android:inputType="text"
                    android:textSize="15sp" />

                <android.widget.Button
                    android:id="@+id/btn_code_check"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="-1dp"
                    android:text="@string/check_phoneNum"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.widget.Button
        android:id="@+id/btn_fin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="40dp"
        android:text="@string/signup_fin"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />


</androidx.constraintlayout.widget.ConstraintLayout>